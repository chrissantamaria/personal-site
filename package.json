{
  "name": "personal-site",
  "version": "0.1.0",
  "description": "A portfolio website to display my contact info, resume and projects",
  "author": "Chris Santamaria <chris@santamaria.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,ts,tsx,json,md}\"",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "ga-lite": "^2.1.0",
    "gatsby": "^3.11.1",
    "gatsby-plugin-image": "^1.11.0",
    "gatsby-plugin-manifest": "^3.11.0",
    "gatsby-plugin-netlify": "^3.11.0",
    "gatsby-plugin-postcss": "^4.11.0",
    "gatsby-plugin-preact": "^5.11.0",
    "gatsby-plugin-react-helmet": "^4.11.0",
    "gatsby-plugin-sharp": "^3.11.0",
    "gatsby-source-filesystem": "^3.11.0",
    "gatsby-transformer-sharp": "^3.11.0",
    "just-debounce": "^1.1.0",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "typeface-open-sans": "^1.1.13"
  },
  "devDependencies": {
    "@types/react-helmet": "^6.1.2",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "autoprefixer": "^10.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "2.3.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
